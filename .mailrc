# s-nail configuration
set v15-compat

set ssl-ca-file=/etc/ssl/certs/ca-certificates.crt
set ssl-no-default-ca
set ssl-protocol="-ALL,+TLSv1.2"
set ssl-cipher-list="ALL:!aNULL:!MEDIUM:!LOW:!MD5:!RC4:!EXPORT:@STRENGTH"
set ssl-verify=strict

set sendcharsets=utf-8
set reply-in-same-charset

set skipemptybody
set sendwait
set mimetypes-load-control

set imap-cache=~/.cache/mail
set imap-keepalive=30

set colour-pager crt=80 mime-counter-evidence=6
set datefield="%b %d"
set headline="%>%a%m %-18f %6d %-5o %i%-s"

set followup-to followup-to-honour=ask-yes reply-to-honour=ask-yes
mlsubscribe suckless.org$ git@vger.kernel.org$ lists.alpinelinux.org$

retain date from to cc subject

account riseup {
	localopts on
        set from="Ivan Tham <pickfire@riseup.net>"
        set folder=imaps://pickfire@mail.riseup.net/
        set record=+Sent
        set smtp=smtps://pickfire@mail.riseup.net
	set agent-shell-lookup="pass Mail/riseup.net | head -n 1"
}

account google {
	localopts on
	set from="Ivan Tham <ivanthamjunhoe@gmail.com>"
	set folder=imaps://ivanthamjunhoe@imap.gmail.com/
	set record="+[Gmail]/Sent Mail"
	set smtp=smtps://ivanthamjunhoe@smtp.gmail.com
	set agent-shell-lookup="pass Mail/gmail.com | head -n 1"
}

account riseup

set pipe-text/html="elinks -dump -force-html /dev/stdin"
